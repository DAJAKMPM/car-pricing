{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testRegex": "test/.*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": [
      "ts-jest",
      {
        "tsconfig": "tsconfig.test.json"
      }
    ]
  },
  "collectCoverageFrom": ["**/*.(t|j)s"],
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1"
  },
  "coverageDirectory": "../coverage",
  "testEnvironment": "node"
}
